{##
    This atom will display a form input.

    @param input_type                               string='text'
    @param input_class_name                         string=null
    @param input_modifiers                          string=null
    @param input_placeholder                        string=null
    @param input_id                                 string=null
    @param input_required                           bool=false
    @param input_value                              string=null
    @param input_validate                           bool=false
    @param input_validation_pattern                 string=null
    @param input_validation_type                    string=null
#}

{% set id = input_id|default ? 'id=' ~ input_id ~ ' name=' ~ input_id %}
{% set type = 'type=' ~ input_type|default('text') %}
{% set class = 'class="form-input js-form-input ' ~ input_class_name|default ~ ' ' ~ input_modifiers|default ~ '"' %}
{% set placeholder = input_placeholder|default ? 'placeholder="' ~ input_placeholder ~ '"' %}
{% set required = input_required|default ? 'required' %}
{% set validation = input_validate|default ? 'data-validate' ~ (input_validation_pattern|default ? ' data-validation-pattern=' ~ input_validation_pattern) ~ (input_validation_type|default ? ' data-validate-' ~ input_validation_type) %}
{% set value = input_value ? 'value="' ~ input_value ~ '"' %}

<input {{ id }} {{ type }} {{ class|raw }} {{ placeholder|raw }} {{ required }} {{ validation }} {{ value|raw }} autocomplete="off"/>
