{##
    This atom will display a form input.

    @param input_type                               string='text'
    @param input_class_name                         string=null
    @param input_modifiers                          string=null
    @param input_placeholder                        string*
    @param input_id                                 string=null
    @param input_required                           bool=false
    @param input_parsley_phone_validation_messages  array=null
    @param input_parsley_validation_enabled         bool=false

#}

<input class="form-input
{% if input_class_name|default %} {{ input_class_name }}{% endif %}
{% if input_modifiers|default %} {{ input_modifiers }}{% endif %}"
type="{{ input_type|default('text') }}" placeholder="{{ input_placeholder }}" autocomplete="off"
{% if input_id|default %}id="{{ input_id }}" name="{{ input_id }}"{% endif %}
{% if input_required|default %} required{% endif %}
{% if input_type == 'tel' and input_parsley_validation_enabled %}
    data-parsley-phone
    data-parsley-phone-validation-messages={{ input_parsley_phone_validation_messages|json_encode }}
{% endif %}/>
