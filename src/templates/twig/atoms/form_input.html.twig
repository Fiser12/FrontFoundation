{##
    This atom will display a form input.

    @param type             string='text'
    @param class_name       string=null
    @param modifiers        string=null
    @param placeholder      string*
    @param id               string=null
    @param required         bool=false

#}

<input class="form-input{{ modifiers }} {{ class_name }}"
       type="{{ type|default('text') }}" placeholder="{{ placeholder }}" autocomplete="off"
       {% if id|default %}id="{{ id }}" name="{{ id }}"{% endif %}
       {% if required|default %} required{% endif %}/>
