{##
    This atom will display a form label.

    @param label_class_name       string=null
    @param label_modifiers        string=null
    @param label_content          string*
    @param label_required         bool=false
    @param label_for              string=null

#}

{% set class = 'class="form-label ' ~ label_class_name|default ~ ' ' ~ label_modifiers|default ~ '"' %}
{% set for = label_for|default ? 'for=' ~ label_for %}

<label {{ class|raw }} {{ for }}>
    {% if label_required|default(false) %}
        <span class="form-label__required">*</span>
    {% endif %}
    {{ label_content|raw }}
</label>
