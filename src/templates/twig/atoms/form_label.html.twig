{##
    This atom will display a form label.

    @param lable_class_name       string=null
    @param lable_modifiers        array|string=null
    @param lable_title            string*
    @param lable_required         bool=false
    @param lable_for              string=null

#}

<label class="form-label {{ label_modifiers }} {{ label_class_name }}"{% if label_for|default %} for="{{ label_for }}"{% endif %}>
    {% if label_required|default(false) %}
        <span class="form-label__required">*</span>
    {% endif %}
    {{ label_title }}
</label>
