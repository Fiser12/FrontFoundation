{##
    This atom will display a form label.

    @param class_name       string=null
    @param modifiers        array|string=null
    @param title            string*
    @param required         bool=false
    @param for              string=null

#}

<label class="form-label {{ modifiers }} {{ class_name }}"{% if for|default %} for="{{ for }}"{% endif %}>
    {% if required|default(false) %}
        <span class="form-label__required">*</span>
    {% endif %}
    {{ title }}
</label>
