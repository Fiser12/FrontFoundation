{##
    This atom will display a form textarea.

    @param textarea_class_name                  string=null
    @param textarea_modifiers                   string=null
    @param textarea_placeholder                 string=null
    @param textarea_id                          string=null
    @param textarea_name                        string=null
    @param textarea_required                    int=0
    @param textarea_value                       string=null
    @param textarea_validate                    int=0
    @param textarea_validation_pattern          string=null
    @param textarea_validation_type             string=null
    @param textarea_autogrow                    int=1
    @param textarea_autogrow_max_lines          number=15
    @param textarea_initial_rows                number=5
#}

{% set id = textarea_id|default ? 'id=' ~ textarea_id %}
{% set name = textarea_name|default(textarea_id|default) ? 'name=' ~ textarea_name|default(textarea_id|default) %}
{% set class = 'class="form-textarea js-form-textarea ' ~ textarea_class_name|default ~ ' ' ~ textarea_modifiers|default ~ '"' %}
{% set placeholder = textarea_placeholder|default ? 'placeholder="' ~ textarea_placeholder ~ '"' %}
{% set required = textarea_required|default(0) ? 'required' %}
{% set validation = textarea_validate|default(0) ? 'data-validate' ~ (textarea_validation_pattern|default ? ' data-validate-pattern=' ~ textarea_validation_pattern) ~ (textarea_validation_type|default ? ' data-validate-' ~ textarea_validation_type) %}
{% set autogrow = textarea_autogrow|default(1) ? 'data-autogrow data-autogrow-max-lines=' ~ textarea_autogrow_max_lines|default(15) %}
{% set rows = 'rows=' ~ textarea_initial_rows|default(5) %}

<textarea {{ id }} {{ name }} {{ class|raw }} {{ placeholder|raw }} {{ autogrow }} {{ rows }} {{ required }} {{ validation }} autocomplete="off" tabindex="0">
    {{- textarea_value|default -}}
</textarea>
